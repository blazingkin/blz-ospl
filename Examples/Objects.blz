constructor Ball

	# Objects have properties
	radius = 2
	color = "red"
	
	# Objects can also have functions (closures)
	:volume
		return 4/3 * {pi} * (radius ** 3)
	end
	:name
		return "a " + color + " ball with radius " + radius
	end
	
end
